{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VoiceTagEditor",
  "version": "0.8.1",
  "identifier": "com.noguchiyuuki.voicetageditor",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "VoiceTagEditor",
        "width": 1280,
        "height": 720,
        "dragDropEnabled": true 
      }
    ],
    "security": {
      "csp": {
        "img-src": "'self' asset: http://asset.localhost blob: data:"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../README.md",
      "../LICENSE",
      "../THIRD-PARTY-NOTICES.md"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
