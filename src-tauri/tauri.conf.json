{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VoiceTagEditor",
  "version": "0.8.1",
  "identifier": "com.noguchiyuuki.voicetageditor",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "VoiceTagEditor",
        "width": 1280,
        "height": 720,
        "dragDropEnabled": true 
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: http://asset.localhost blob: data:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src ipc: http://ipc.localhost; media-src 'self' asset: http://asset.localhost blob: data:;",
      "devCsp": "default-src 'self'; img-src 'self' asset: http://asset.localhost blob: data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval'; connect-src ipc: http://ipc.localhost ws://localhost:1420 http://localhost:1420; media-src 'self' asset: http://asset.localhost blob: data:;",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["**"],
          "deny": [
            "$HOME/.ssh/**",
            "$HOME/.gnupg/**"
          ]
        }
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "resources": [
      "../README.md",
      "../LICENSE",
      "../THIRD-PARTY-NOTICES.md"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/iLickeyPro/VoiceTagEditor/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDkyOTE1QTlDQTFCNEY1NgpSV1JXVHh2S3FSVXBDUjhpYnZVQWhoNjNaSUFTOG1pUnVMV29WZnZQSXh3SUtTdVJaZmEzRmtTMgo="
    }
  }
}
